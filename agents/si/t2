
si = {};
si.sync_interval = 5;

while(true) {
                let cur = new Date();
		let t = cur.getTime();
		let i = si.sync_interval * 60000;
		r = t % i;
		let m = cur.getMinutes();
		let s = cur.getSeconds();
//                dprintf(-1,"minutes: %d, s: %d, interval: %r\n", m, s, si.sync_interval);
                dprintf(-1,"minutes: %-2d, s: %-2d\r", m, s);
		dprintf(99,"t: %s, i: %s, r: %s\n", t, i, r);
		if (r < 1000) {
                        dprintf(-1,"\n***SYNCING***\n");
		}
		sleep(1);
}
